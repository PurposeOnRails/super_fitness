<p id="notice"><%= notice %></p>

<h1>Access Codes</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Code</th>
      <th>Purpose</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @access_codes.each do |access_code| %>
      <tr>
        <td><%= access_code.description %></td>
        <td><%= access_code.code %></td>
        <td><%= access_code.purpose %></td>
        <td><%= link_to 'Show', access_code %></td>
        <td><%= link_to 'Edit', edit_access_code_path(access_code) %></td>
        <td><%= link_to 'Destroy', access_code, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Access Code', new_access_code_path %>
